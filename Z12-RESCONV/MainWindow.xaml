<Window x:Class="Z12_RESCONV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Z12_RESCONV"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:res="clr-namespace:Z12_RESCONV.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml"/>
                <ResourceDictionary Source="Dictionary2.xaml"/>

                <ResourceDictionary>
                    <res:HeigthZoomConverter x:Key="HeightConverter"/>
                    <res:WidthZoomConverter x:Key="WidthConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="grid" Loaded="Grid_Loaded">
        <Grid.Resources>
        </Grid.Resources>
        <Rectangle Fill="{DynamicResource Brush}" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="774"/>
        <Label Content="{StaticResource Title}" HorizontalAlignment="Center" Margin="375,115,380.6,0" VerticalAlignment="Top" RenderTransformOrigin="2.517,-1.246" Width="38"/>
        <Label Content="{DynamicResource test}" HorizontalAlignment="Left" Margin="369,144,0,0" VerticalAlignment="Top" Height="24" Width="57"/>
        <Rectangle Fill="{DynamicResource ResourceKey=Brush}" HorizontalAlignment="Left" Height="100" Margin="10,310,0,0" Stroke="Black" VerticalAlignment="Top" Width="774"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="709,286,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="629,286,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click2"/>
        <TextBox HorizontalAlignment="Center" Height="{Binding Zoom, Converter={StaticResource HeightConverter}}" Text="{Binding Zoom}" VerticalAlignment="Center" Width="{Binding Zoom, Converter={StaticResource WidthConverter}}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="375,286,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click3"/>
        
    </Grid>
</Window>
